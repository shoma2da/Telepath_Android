<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF777777"
    tools:context="net.shoma2da.android.telepath2.SearchActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:tint="#FF444444"
        app:srcCompat="@drawable/ic_mic_black"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#FF888888"
        app:civ_border_width="1dp"
        android:layout_alignBottom="@+id/imageView2" android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="スマートフォンを耳に近づけ、「ピピッ」という音が鳴ったら話してください。"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
</RelativeLayout>